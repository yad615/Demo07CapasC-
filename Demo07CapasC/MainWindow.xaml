<Window x:Class="Demo07CapasC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Demo07CapasC"
        mc:Ignorable="d"
        Title="Gestión de Clientes - Yadhira Alcantara" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF5F7" Offset="0"/>
            <GradientStop Color="#FFE8ED" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Window.Resources>
        <!-- Colores suaves y profesionales -->
        <SolidColorBrush x:Key="PrimaryRose" Color="#E91E63"/>
        <SolidColorBrush x:Key="LightRose" Color="#F8BBD0"/>
        <SolidColorBrush x:Key="SoftRose" Color="#FCE4EC"/>
        <SolidColorBrush x:Key="DarkRose" Color="#C2185B"/>
        <SolidColorBrush x:Key="AccentGold" Color="#FFD700"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#4A4A4A"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#757575"/>
        <SolidColorBrush x:Key="BackgroundCard" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#F0F0F0"/>

        <!-- Estilo para TextBox moderno -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" CornerRadius="10" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect Color="#F8BBD0" BlurRadius="8" ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ScrollViewer x:Name="PART_ContentHost" Margin="5,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryRose}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#F8BBD0" BlurRadius="12" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para Label -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Botón Principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryRose}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" Background="{TemplateBinding Background}">
                            <Border.Effect>
                                <DropShadowEffect Color="#E91E63" BlurRadius="15" ShadowDepth="3" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource DarkRose}"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#E91E63" BlurRadius="20" ShadowDepth="5" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón Secundario -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryRose}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="25,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="{StaticResource LightRose}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" CornerRadius="10" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SoftRose}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryRose}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SoftRose}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="True"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="45"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryRose}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightRose}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightRose}"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Panel Izquierdo: Formulario -->
        <Border Grid.Column="0" Background="{StaticResource BackgroundCard}" 
                CornerRadius="20" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="#E91E63" BlurRadius="25" ShadowDepth="0" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>
                <!-- Encabezado con icono decorativo -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Border Width="6" Height="35" Background="{StaticResource PrimaryRose}" 
                            CornerRadius="3" Margin="0,0,12,0"/>
                    <TextBlock Text="Registro de Clientes" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryRose}"/>
                </StackPanel>

                <TextBlock Text="Completa la información del cliente" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondary}" 
                           Margin="0,0,0,30"/>

                <!-- Campo Nombre -->
                <TextBlock Text="Nombre completo" Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="txtName" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>

                <!-- Campo Dirección -->
                <TextBlock Text="Dirección" Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="txtAddress" Style="{StaticResource ModernTextBox}" Margin="0,0,0,20"/>

                <!-- Campo Teléfono -->
                <TextBlock Text="Teléfono" Style="{StaticResource ModernLabel}"/>
                <TextBox x:Name="txtPhone" Style="{StaticResource ModernTextBox}" Margin="0,0,0,30"/>

                <!-- Botones -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="15"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="btnGuardar" 
                            Content="💾 Guardar" 
                            Style="{StaticResource PrimaryButton}" 
                            Click="btnGuardar_Click" 
                            Grid.Column="0"/>

                    <Button x:Name="btnLimpiar" 
                            Content="✨ Limpiar" 
                            Style="{StaticResource SecondaryButton}" 
                            Click="btnLimpiar_Click"
                            Grid.Column="2"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Panel Derecho: Búsqueda y Lista -->
        <StackPanel Grid.Column="1" Margin="25,0,0,0">
            <!-- Título de la sección y botón eliminar -->
            <Grid Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Border Width="6" Height="30" Background="{StaticResource PrimaryRose}" 
                            CornerRadius="3" Margin="0,0,12,0"/>
                    <TextBlock Text="Lista de Clientes" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="{StaticResource PrimaryRose}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="btnEliminar" 
                        Content="🗑️ Eliminar" 
                        Style="{StaticResource SecondaryButton}"
                        Click="btnEliminar_Click"
                        IsEnabled="False"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20,10"/>
            </Grid>

            <!-- Buscador compacto -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" 
                        Background="{StaticResource PrimaryRose}" 
                        CornerRadius="10,0,0,10" 
                        Padding="15,10"
                        VerticalAlignment="Stretch">
                    <TextBlock Text="🔍" FontSize="16" VerticalAlignment="Center"/>
                </Border>

                <TextBox x:Name="txtBuscador" 
                         Grid.Column="1"
                         Style="{StaticResource ModernTextBox}" 
                         TextChanged="txtBuscador_TextChanged"
                         Padding="15,10"
                         BorderThickness="2,2,2,2">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="0,10,10,0"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
            </Grid>

            <!-- DataGrid -->
            <Border Background="{StaticResource BackgroundCard}" 
                    CornerRadius="20" 
                    Padding="5">
                <Border.Effect>
                    <DropShadowEffect Color="#E91E63" BlurRadius="25" ShadowDepth="0" Opacity="0.15"/>
                </Border.Effect>

                <DataGrid x:Name="dataGrid" 
                          Style="{StaticResource ModernDataGrid}"
                          IsReadOnly="True" 
                          CanUserAddRows="False" 
                          SelectionChanged="dataGrid_SelectionChanged"
                          Margin="5"/>
            </Border>
        </StackPanel>
    </Grid>
</Window>